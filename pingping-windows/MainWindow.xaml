<Window x:Class="PingPing___Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPing___Windows"
        mc:Ignorable="d"
        Title="PingPing Server" Height="150" Width="300" ResizeMode="NoResize"
        Closing="Window_Closing">
    <DockPanel>
        <Border DockPanel.Dock="Top">
            <TextBlock Name="Ip" HorizontalAlignment="Center" Margin="5">아래의 주소를 앱에 입력해주세요</TextBlock>
        </Border>
        <Border DockPanel.Dock="Top">
            <TextBlock Name="UserIp" HorizontalAlignment="Center" Margin="10" FontWeight="Bold"></TextBlock>
        </Border>
        <ToggleButton 
            Name="Switch"
            Content="시작"
            Width="100" 
            Height="40"
            HorizontalAlignment="Center"
            Checked="ToggleButton_OnChecked"
            Unchecked="ToggleButton_OnUnchecked"/>
    </DockPanel>
</Window>